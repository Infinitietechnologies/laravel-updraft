{
    "name": "yourusername/laravel-updraft",
    "description": "A Laravel package for easily updating your application through update packages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelUpdraft\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelUpdraft\\LaravelUpdraftServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}